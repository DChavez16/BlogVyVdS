<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.blogvyvds.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_login_navigation"
            app:destination="@id/login_navigation"
            app:popUpTo="@id/main_navigation" />
        <action
            android:id="@+id/action_homeFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
    </fragment>
    <include app:graph="@navigation/login_navigation" />
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.blogvyvds.ui.home.CreatePostFragment"
        android:label="fragment_create_post"
        tools:layout="@layout/fragment_create_post" >
        <argument android:name="username"
            app:argType="string" />
        <argument
            android:name="photo_url"
            app:argType="string" />
    </fragment>
</navigation>